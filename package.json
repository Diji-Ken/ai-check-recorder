{
  "name": "ai-check-recorder",
  "version": "1.0.0",
  "description": "AI業務改善チェック PC記録ツール",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "author": "デジタルツール研究所",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "archiver": "^7.0.1",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2",
    "screenshot-desktop": "^1.15.0"
  },
  "build": {
    "appId": "com.digitool.ai-check-recorder",
    "productName": "AI Check Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer-dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSScreenCaptureUsageDescription": "業務改善のため、画面のスクリーンショットを記録します。",
        "NSAppleEventsUsageDescription": "アクティブなアプリケーション情報を取得するために使用します。"
      }
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
